<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/common_blue"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/mScanIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_scan"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="@string/serch_hint"
            android:cursorVisible="false"
            android:editable="false"
            android:textColor="@color/common_white"
            android:textColorHint="@color/common_white"
            android:background="@drawable/home_header_editer_bg"
            android:paddingLeft="@dimen/common_padding"
            android:paddingTop="@dimen/common_padding_small"
            android:paddingBottom="@dimen/common_padding_small"
            android:layout_marginTop="@dimen/common_margin_small"
            android:layout_marginBottom="@dimen/common_margin_small"
            android:layout_marginLeft="@dimen/common_margin"
            android:drawableLeft="@drawable/icon_search"
            android:drawablePadding="@dimen/common_padding_middle"
            android:textCursorDrawable="@null"
            android:maxLines="1"
            />

    </LinearLayout>

</LinearLayout>
